{{>layout/header}}

<div id="posts_list">
    <table id="table" class="table table-horizontal">
        <thead id="thead">
        <tr>
            <a href="/" role="button" class="btn btn-primary bi bi-pencil-fill"> 현재</a>
        </tr>
        <tr>
            <a href="/posts/future" role="button" class="btn btn-primary bi bi-pencil-fill"> 예정</a>
        </tr>
        <tr>
            <a href="/posts/score" role="button" class="btn btn-primary bi bi-pencil-fill"> 평점</a>
        </tr>
        <tr>
            <a href="/posts/review" role="button" class="btn btn-primary bi bi-pencil-fill"> 리뷰</a>
        </tr>
        </thead>
        <tbody id="tbody">
        {{#posts}}
        <tr>
            <td>{{id}}</td>
            <td><a href="/posts/read/{{id}}">{{title}}</a></td>
            <td>{{writer}}</td>
            <td>{{createdDate}}</td>
            <td>{{view}}</td>
        </tr>
        {{/posts}}
        </tbody>
    </table>
    <div class="text-right">
        {{!<a href="/posts/write" role="button" class="btn btn-primary bi bi-pencil-fill"> 글쓰기</a>}}
    </div>
    {{! Page //원래 주석}}
    {{!>posts/posts-page //새로 주석}}
</div>
{{>layout/footer}}
